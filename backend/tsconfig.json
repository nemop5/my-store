{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceRoot": "./src",
    "lib": ["dom", "es6"],
    "declaration": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "gulp/**/*", "src/database/seeds"],
  "exclude": ["node_modules", "dist", "docs", "src/database/migrations"]
}
